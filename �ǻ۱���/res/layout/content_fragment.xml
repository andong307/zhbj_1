<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.itheima41.zhbj.view.NoScrollViewPager
        android:id="@+id/nsvp_content_fragment"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1" >
    </com.itheima41.zhbj.view.NoScrollViewPager>

    <RadioGroup
        android:id="@+id/rg_content_fragment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_tab_bg"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_content_fragment_home"
            style="@style/tab_style"
            android:drawableTop="@drawable/home_tab_bg"
            android:text="首页" />

        <RadioButton
            android:id="@+id/rb_content_fragment_newscenter"
            style="@style/tab_style"
            android:drawableTop="@drawable/newscenter_tab_bg"
            android:text="新闻中心" />

        <RadioButton
            android:id="@+id/rb_content_fragment_smartservice"
            style="@style/tab_style"
            android:drawableTop="@drawable/smartservice_tab_bg"
            android:text="智慧服务" />

        <RadioButton
            android:id="@+id/rb_content_fragment_govaffairs"
            style="@style/tab_style"
            android:drawableTop="@drawable/govaffairs_tab_bg"
            android:text="政务" />

        <RadioButton
            android:id="@+id/rb_content_fragment_settings"
            style="@style/tab_style"
            android:drawableTop="@drawable/settings_tab_bg"
            android:text="设置" />
    </RadioGroup>

</LinearLayout>